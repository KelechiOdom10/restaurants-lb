---
import type { HTMLAttributes } from "astro/types";
interface Props extends HTMLAttributes<"button"> {
  fullWidth?: boolean;
}

const { fullWidth, ...props } = Astro.props;
---

<button
  {...props}
  class:list={[
    "inline-flex text-white text-base font-medium gap-2 items-center bg-neutral-900 justify-center gap-1 border border-slate-200 rounded-full py-4 px-6 disabled:(opacity-50 cursor-not-allowed) w-fit",
    { "w-full": fullWidth },
  ]}
>
  <slot />
</button>
